<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bottom_navigation"
    app:startDestination="@id/navigation_timetable">

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.alexxingplus.nntuandroid.ui.news.NewsFragment"
        android:label="@string/navigation_news_text"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_timetable"
        android:name="com.alexxingplus.nntuandroid.ui.TimetableFragment"
        android:label="@string/navigation_timetable_text"
        tools:layout="@layout/fragment_timetable" />

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.alexxingplus.nntuandroid.ui.tasks.TasksFragment"
        android:label="@string/navigation_tasks_text"
        tools:layout="@layout/fragment_tasks" />

    <fragment
        android:id="@+id/navigation_more"
        android:name="com.alexxingplus.nntuandroid.ui.settings"
        android:label="@string/navigation_more_text"
        tools:layout="@layout/fragment_more" />

</navigation>
