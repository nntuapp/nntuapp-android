<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1E1E1E</item>
        <item name="colorPrimaryDark">#1E1E1E</item>
        <item name="colorAccent">@color/lighterNNTUblue</item>
        <item name="colorBackgroundFloating">#606060</item>
        <item name="cardBackgroundColor">#1E1E1E</item>
        <item name="colorSecondary">#0077FF</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:colorPrimary">#000000</item>
        <item name="android:navigationBarColor">#1E1E1E</item>
        <item name="color">#FFFFFF</item>
    </style>

    <style name="AppTheme.Red" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1E1E1E</item>
        <item name="colorPrimaryDark">#1E1E1E</item>
        <item name="colorAccent">@color/lighterNNTUred</item>
        <item name="cardBackgroundColor">#1E1E1E</item>
        <item name="colorSecondary">#FF3300</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:colorPrimary">#000000</item>
        <item name="colorBackgroundFloating">#606060</item>
        <item name="android:navigationBarColor">#1E1E1E</item>
        <item name="color">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
